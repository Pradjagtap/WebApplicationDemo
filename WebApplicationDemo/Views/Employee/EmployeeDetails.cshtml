
@{
    ViewData["Title"] = "EmployeeDetails";
}

<h1>EmployeeDetails</h1>

<form asp-action="EmployeeDetails">
    
    <table class="table">
        <tr>
            <td>
                 Name
            </td>
            <td>
                @Html.TextBox("name")
            </td>
        </tr>
        <tr>
            <td>
                Email
            </td>
            <td>
                @Html.TextBox("email")
            </td>
        </tr>
        <tr>
            <td>
                Select Gender
            </td>
            <td>
                @Html.RadioButton("gender", "Male") Male
                @Html.RadioButton("gender", "Female") Female
            </td>
        </tr>
        <tr>
            <td>
                Select City
            </td>
            <td>
                @Html.DropDownList("cities")
            </td>
        </tr>
        <tr>
            <td>
                Select Department
            </td>
            <td>
                @Html.DropDownList("depart")
            </td>
        </tr>
        <tr>
            <td>
                Select Qualification
            </td>
            <td>
                @Html.RadioButton("Qualification", "BE IT") BE IT
                @Html.RadioButton("Qualification", "BE CS") BE CS
                @Html.RadioButton("Qualification", "Post Graduate") Post Graduate
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Add" class="btn btn-primary" />
            </td>
        </tr>
    </table>
</form>